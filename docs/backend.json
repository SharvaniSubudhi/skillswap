
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "type": "object",
      "description": "Represents a user's profile information.",
      "properties": {
        "id": { "type": "string", "description": "The user's unique ID." },
        "name": { "type": "string", "description": "The user's full name." },
        "email": { "type": "string", "format": "email", "description": "The user's email address." },
        "avatarUrl": { "type": "string", "format": "uri", "description": "URL of the user's avatar." },
        "skillsKnown": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "skillName": { "type": "string" },
              "level": { "type": "string", "enum": ["basic", "intermediate", "advanced"] }
            },
            "required": ["skillName", "level"]
          },
          "description": "Skills the user can teach."
        },
        "skillsWanted": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "skillName": { "type": "string" }
            },
            "required": ["skillName"]
          },
          "description": "Skills the user wants to learn."
        },
        "availability": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "day": { "type": "string" },
              "timeSlot": { "type": "string" }
            },
            "required": ["day", "timeSlot"]
          },
          "description": "User's availability."
        },
        "studentIdProof": {
          "type": "string",
          "description": "URL to the student ID proof."
        },
        "credits": { "type": "number" },
        "rating": { "type": "number" },
        "badges": { "type": "array", "items": { "type": "string" } },
        "status": { "type": "string", "enum": ["online", "offline"] }
      },
      "required": ["id", "name", "email"]
    },
    "Session": {
        "title": "Session",
        "type": "object",
        "description": "Represents a tutoring session between two users.",
        "properties": {
            "teacherId": { "type": "string" },
            "learnerId": { "type": "string" },
            "skill": { "type": "string" },
            "duration": { "type": "number" },
            "creditsTransferred": { "type": "number" },
            "googleMeetLink": { "type": "string", "format": "uri" },
            "status": { "type": "string", "enum": ["scheduled", "completed", "cancelled", "requested"] },
            "feedback": { "type": "string" },
            "rating": { "type": "number" },
            "disputeRaised": { "type": "boolean" },
            "sessionDate": { "type": "string", "format": "date-time" }
        },
        "required": ["teacherId", "learnerId", "skill", "duration", "creditsTransferred", "status", "sessionDate"]
    },
    "Dispute": {
        "title": "Dispute",
        "type": "object",
        "description": "Represents a dispute raised for a session.",
        "properties": {
            "sessionId": { "type": "string" },
            "raisedBy": { "type": "string" },
            "reason": { "type": "string" },
            "status": { "type": "string", "enum": ["open", "resolved", "rejected"] },
            "resolution": { "type": "string" },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["sessionId", "raisedBy", "reason", "status", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores individual user profiles."
    },
    "/sessions/{sessionId}": {
        "schema": { "$ref": "#/entities/Session" },
        "description": "Stores session details."
    },
    "/disputes/{disputeId}": {
        "schema": { "$ref": "#/entities/Dispute" },
        "description": "Stores dispute details for sessions."
    }
  }
}
